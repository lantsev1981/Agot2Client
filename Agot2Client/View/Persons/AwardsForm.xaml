<UserControl x:Class="Agot2Client.AwardsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agot2Client"
             xmlns:res="clr-namespace:Agot2Client.Properties"
             mc:Ignorable="d">
    <Grid Style="{StaticResource infoGrid}">
        <StackPanel Background="#1B1C24"               
              HorizontalAlignment="Center" VerticalAlignment="Center">
            <local:AwardsView Margin="5"/>
            <Button Content="OK"
                    HorizontalAlignment="Right"
                    Margin="5" Width="32" 
                    Click="okBtnClick"/>
        </StackPanel>
    </Grid>
</UserControl>
