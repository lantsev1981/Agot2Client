<UserControl x:Class="Agot2Client.ProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agot2Client"
             xmlns:res="clr-namespace:Agot2Client.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.ToolTip>
        <StackPanel>
            <TextBlock Text="{Binding ValueString}"/>
            <TextBlock Text="{Binding CountString}"/>
        </StackPanel>
    </UserControl.ToolTip>

    <Grid Name="progressColor" Height="{Binding Value}" VerticalAlignment="Bottom"/>
</UserControl>
