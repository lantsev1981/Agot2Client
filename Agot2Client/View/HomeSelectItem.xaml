<UserControl x:Class="Agot2Client.HomeSelectItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ShaderEffectLibrary="clr-namespace:ShaderEffectLibrary;assembly=EffectsLib"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             MouseEnter="_MouseEnter">
    <Grid x:Name="image">
        <Image Source="{Binding Source}"/>
        <TextBlock Text="{Binding Slogan}"
                   Foreground="{Binding FontForeground}"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   FontFamily="Arial"
                   FontSize="8"
                   Width="85"
                   Margin="0,330,0,0" FontWeight="Bold"/>
    </Grid>
</UserControl>
