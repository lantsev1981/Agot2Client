<Window Style="{StaticResource windowStyle}" x:Class="Agot2Client.AccauntWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AccauntWindow" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None" SizeToContent="Height" ResizeMode="NoResize" KeyUp="Window_KeyUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Margin="5" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" />
        <TextBox Name="login" Margin="5" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" TextWrapping="Wrap"/>

        <Button Content="API" Margin="5" Grid.Column="0" Grid.Row="2"  Height="24" Width="75" Click="VKButton_Click" />
        <Button Content="войти" Margin="5" Grid.Column="1" Grid.Row="2"  Height="24" Width="75" Click="OKButton_Click" />
        <Button Content="выйти" Margin="5" Grid.Column="2" Grid.Row="2"  Height="24" Width="75" Click="CancelButton_Click" />
    </Grid>
</Window>
